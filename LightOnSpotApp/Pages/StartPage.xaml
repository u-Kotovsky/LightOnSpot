<Page x:Class="LightOnSpotApp.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LightOnSpotApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0">Get started</Label>
                <TextBox Grid.Row="1" VerticalContentAlignment="Center">Search an item</TextBox>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid></DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Button HorizontalContentAlignment="Left" Margin="5, 5, 5, 5" Command="{Binding CreateNewProjectCommand}">Create a new project</Button>
            <Button Grid.Row="1" HorizontalContentAlignment="Left" Margin="5, 5, 5, 5" Command="{Binding OpenProjectCommand}">Open a project</Button>
        </Grid>
    </Grid>
</Page>
