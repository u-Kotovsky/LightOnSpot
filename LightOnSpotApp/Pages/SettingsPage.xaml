<Page x:Class="LightOnSpotApp.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LightOnSpotApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Settings head -->
            <Button Grid.Column="0">Project</Button>
            <Button Grid.Column="1">Patch</Button>
            <Button Grid.Column="2">Network</Button>
            <Button Grid.Column="3">Bindings</Button>
            <Button Grid.Column="4">Unused</Button>
        </Grid>
        <Grid>
            <!-- Settings body -->
            <Frame x:Name="SettingsFrame"></Frame>
        </Grid>
    </Grid>
</Page>
